<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bishe.networkmonitor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_protection"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <service
            android:name=".MsgService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="bishe.networkmonitor.msgService"></action>
            </intent-filter>
        </service>

        <activity
            android:name=".activity.TestViewActivity"
            android:label="@string/title_activity_test_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.PrivilegeActivity"
            android:label="@string/title_activity_privilege"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.EditNewMsgActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_new_msg"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AppListMainActivity"
            android:label="@string/title_activity_app_list_main"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AppConnDetailActivity"
            android:label="@string/title_activity_app_conn_detail"
            android:parentActivityName=".activity.AppListMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MsgActivity"
            android:label="@string/title_activity_msg"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MsgDetailActivity"
            android:label="@string/title_activity_msg_detail"
            android:parentActivityName=".activity.MsgActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>